<div class="book-information">
  <button class="add-to-library" type="button" name="button">Add To Library</button>
  <div class="book-info-header">
    <h1><%= book.escape('title') %></h1>
    <h3 class="pull-right"><%= book.escape('author_fname') %> <%= book.escape('author_lname') %></h3>
  </div>
  <img class="cover-place-holder" src="http://lorempixel.com/output/food-h-g-208-359-1.jpg"/>
  <p class="book-description"><%= book.escape('description')%> <a href="#book/<%=book.id%>">Read Book!</a></p>

</div>
