<!DOCTYPE html>
<html>
<head>
  <title>ReadMe</title>
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Montserrat">
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>


  <%= csrf_meta_tags %>
  <% if current_user %>
    <script type="text/javascript">
      window.CURRENT_USER_ID = "<%= current_user.id %>"
    </script>
  <% end %>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <script type="text/javascript">
    window.CLOUDINARY_SETTINGS_BOOK = {
      stylesheet: 'http://cloudinary.com/widget/themes/minimal.css',
      sources: ['local'],
      client_allowed_formats: ['epub'],
      cloud_name: "<%= ENV['cloud_name'] %>",
      upload_preset: "<%= ENV['upload_preset'] %>"
    }
  </script>
  <script type="text/javascript">
    window.CLOUDINARY_SETTINGS_COVER = {
      stylesheet: 'http://cloudinary.com/widget/themes/minimal.css',
      sources: ['local', 'url'],
      client_allowed_formats: ['jpeg', 'png', 'gif'],
      cloud_name: "<%= ENV['cloud_name'] %>",
      upload_preset: "<%= ENV['upload_preset'] %>"
    }
  </script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-65573403-1', 'auto');
    ga('send', 'pageview');

  </script>
</head>
<body>

<%= yield %>

</body>
</html>
